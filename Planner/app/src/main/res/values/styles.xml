<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarDateButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/date_button_background</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>

        <!-- 최소 높이/너비 줄이기 -->
        <item name="android:minHeight">38dp</item>
        <item name="android:minWidth">70dp</item>

        <!-- 텍스트 패딩 줄여서 높이 더 줄이기 -->
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>

        <item name="android:textSize">17sp</item>
    </style>

    <!-- 다이얼로그 전용 오버레이 테마 -->
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- 긍정/부정 버튼에 각각 이 스타일을 적용 -->
        <item name="buttonBarPositiveButtonStyle">
            @style/CustomDialogButton
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/CustomDialogButton
        </item>
    </style>

    <!-- 다이얼로그 내부 버튼 스타일 -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- 텍스트 색만 검정으로 바꾸고 싶으면 아래만 사용 -->
        <item name="android:textColor">@color/white</item>
        <!-- 만약 둥근 배경도 그대로 쓰고 싶다면 주석 해제 -->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

</resources>